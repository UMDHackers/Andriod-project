<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A5D6A7">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/imageAnim"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Likes:0"
        android:id="@+id/likes"
        android:layout_gravity="center_horizontal"
        android:layout_below = "@+id/imageAnim"
        android:textColor="#000000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TimeLap Taken By: @"
        android:gravity="left"
        android:id="@+id/Author"
        android:layout_gravity="center_horizontal"
        android:layout_below = "@+id/likes"
        android:textColor="#000000"

        />
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            android:text="LIKE"
            android:background="#9CCC65"
            android:id="@+id/button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Pause"
            android:background="#9CCC65"
            android:id="@+id/anim_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Download"
            android:background="#9CCC65"
            android:layout_gravity="right"
            android:id="@+id/download"
            android:layout_alignTop="@+id/anim_button"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:textColor="#000000"

        android:text="Comments:"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id= "@+id/Comments"
        android:background="#81C784"></ListView>

</LinearLayout>