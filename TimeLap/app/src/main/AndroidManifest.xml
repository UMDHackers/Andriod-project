<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.finalproject.cmsc436.timelap">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GeneralPageActivity"
            android:label="@string/title_activity_general_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewVideoActivity"
            android:label="@string/title_activity_view_image"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ImageAdapter"
            android:label="@string/title_activity_image_adapter"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
